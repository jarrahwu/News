            <Button
                android:id="@+id/_6"
                style="@style/pwd_key_item"
                android:text="@string/_6" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/_7"
                style="@style/pwd_key_item"
                android:text="@string/_7" />

            <Button
                android:id="@+id/_8"
